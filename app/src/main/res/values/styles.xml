<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
    </style>
    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorappmain2</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="colorControlNormal">@color/colorappmain2</item>
        <item name="colorControlActivated">@color/colorappmain2</item>
    </style>

</resources>
